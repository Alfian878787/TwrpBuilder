<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/background_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_user_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/list_user_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/list_user_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/list_user_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/list_developer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/list_reject_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorInfo"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_download_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_minus4sdp"
                    android:layout_marginStart="@dimen/_minus4sdp"
                    android:layout_weight="1"
                    android:text="@string/recovery"
                    android:textAllCaps="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/flash"
                    android:textAllCaps="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/feedback"
                    android:textAllCaps="false"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>